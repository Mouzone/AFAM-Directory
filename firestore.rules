rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /students/{studentId} {
      allow read, create: if request.auth != null; // Allow read access to students
      match /students/{studentId}/private {
        allow read, create, delete, update: if request.resource.auth &&
          request.resource.auth.token.role == 'Admin'
      }
    }
    match /teachers/{teacherId} {
      allow read: if request.auth != null; // Allow read access to teacher
    }
  }
}